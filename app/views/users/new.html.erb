<h1>New User</h1>
<p> <em> Ingrese los datos necesarios: </em> </p>

<% if @user.errors.any? %>
  <div>
    Por favor corrija los siguientes problemas:
    <ul>
      <% @user.errors.full_messages.each do |m| %>
        <li>
          <%= m %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |f| %>
  <p>
    <%= f.label :username, "Usuario", class: "input-group"%>
    <%= f.text_field :username, class: "form-control" %>
  </p>

  <p>
    <%= f.label :email, class: "input-group"  %>
    <%= f.text_field :email, class: "form-control" %>
  </p>

  <p>
    <%= f.label :password, "Password", class: "input-group"%>
    <%= f.password_field :password, class: "form-control"%>
  </p>

  <p>
    <%= f.label :password_confirmation, "Ingrese la password de nuevo", class: "input-group"%>
    <%= f.password_field :password_confirmation, class: "form-control"%>
  </p>

  <p>
    <%= f.submit "Crear", class:"btn btn-default btn-lg" %>
    <%= link_to "Cancelar", root_path, class:"btn btn-default btn-lg" %>
  </p>

<% end %>
