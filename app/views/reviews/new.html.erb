<h1>Nuevo Review</h1>

<div>
	<%= render partial: "shared/errors", locals: { obj: @review } %>

	<%= form_for [@poke, @review] do |f| %>
		<p>
			<%= f.label :autor, "Autor" %>
			<%= f.text_field :autor %>
		</p>
    <p>
      <%= f.label :descripcion, "Descripcion" %>
      <%= f.text_area :descripcion %>
    </p>
    <p>
      <%= f.label :rev, "Review" %>
      <%= f.number_field :rev %>
    </p>
		<p>
			<%= f.submit "Agregar Review" , class:"btn btn-default btn-lg"%>
			<%= link_to "Cancelar", @poke , class:"btn btn-default btn-lg"%>
		</p>
	<% end %>
</div>
