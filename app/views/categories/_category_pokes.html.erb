<% if pokes.any? %>
	<div class = "form-group">
		<h2>Pokemon: </h2>
		<table border ="1" class="table table-striped" style="width: 500px; text-align: center">
			<thead>
				<th>ID</th>
				<th>Nombre</th>
			</thead>
			<tbody>
				<%= render pokes %>
			</tbody>
		</table>
	</div>
<% else %>
	<p><em>No hay Pokemon.</em></p>
<% end %>
